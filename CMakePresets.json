{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER_CLANG_SCAN_DEPS": "/usr/lib/llvm-21/bin/clang-scan-deps",
        "CMAKE_CXX_COMPILER": "/usr/lib/llvm-21/bin/clang++",
        "CMAKE_C_COMPILER": "/usr/lib/llvm-21/bin/clang",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-nostdinc++ -I/usr/lib/llvm-21/include/c++/v1",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++ -L/usr/lib/llvm-21/lib -lc++ -lc++abi"
      }
    },
    {
      "name": "debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER_CLANG_SCAN_DEPS": "/usr/lib/llvm-21/bin/clang-scan-deps",
        "CMAKE_CXX_COMPILER": "/usr/lib/llvm-21/bin/clang++",
        "CMAKE_C_COMPILER": "/usr/lib/llvm-21/bin/clang",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-nostdinc++ -I/usr/lib/llvm-21/include/c++/v1",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++ -L/usr/lib/llvm-21/lib -lc++ -lc++abi"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    }
  ]
}